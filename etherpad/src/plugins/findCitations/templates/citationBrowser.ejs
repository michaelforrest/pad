<%
 template.inherit('tagBrowser.ejs');
 helpers.setHtmlTitle("EtherPad: See which pads contain a given URL");
 helpers.includeCss("plugins/twitterStyleTags/tagBrowser.css");
 helpers.includeCss("plugins/twitterStyleTags/pad.css");
 helpers.addToHead('\n<link rel="alternate" href="' + helpers.updateToUrl({format:'rss'}) + '" type="application/rss+xml" title="Query results as RSS" />\n');
%>

<% template.define('docBarTitle', function() { var ejs_data=''; %>
  <td id="docbarpadtitle"><span>See which pads contain a given URL</span></td>
<% return ejs_data; }); %>

<% template.define('editBarItemsLeft', function() { var ejs_data=''; %>
  <td> Search using the box at right.</td>
<% return ejs_data; }); %>

<% template.define('queryRefiner', function() { var ejs_data=''; %>
  <h1>Please enter a URL...</h1>
  <form action="/ep/citations/" method="get">
  <input type="text" name="query" value="<%= urlOfInterest %>"> <button type="submit">Go</button>
  </form>
<% return ejs_data; }); %>
